<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ListView
        android:id="@+id/city_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:choiceMode="singleChoice"
        android:listSelector="@color/material_dynamic_neutral0"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout1"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    ></ListView>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout1"
        app:layout_constraintBottom_toTopOf="@+id/city_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="198dp"
            android:layout_height="65dp"
            android:text="Add City"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="4dp"
            android:onClick="addCity"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="198dp"
            android:layout_height="65dp"
            android:text="Delete City"
            tools:layout_editor_absoluteX="208dp"
            android:onClick="deleteCity"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_list"
        android:visibility="gone">


        <EditText
            android:id="@+id/editTextText"
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="text"
            android:text=""
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="773dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="124dp"
            android:layout_height="45dp"
            android:text="Confirm"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="766dp"
            android:onClick="confirmCity"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>